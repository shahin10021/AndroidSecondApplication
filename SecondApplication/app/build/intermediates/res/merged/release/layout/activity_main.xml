<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.androidlime.secondapplication.MainActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#11aee5">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ausman Friend"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_gravity="center"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/secondimage"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friendship Gift Image"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to My Side"
        android:background="#11a"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        />
</LinearLayout>
